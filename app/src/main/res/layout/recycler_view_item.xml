<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin10"
    app:cardCornerRadius="0dp"
    app:cardElevation="@dimen/margin10"
    app:cardMaxElevation="@dimen/margin10"
    app:contentPadding="@dimen/margin10">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageResident"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/residents_title"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textResident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Resident" />
    </LinearLayout>
</androidx.cardview.widget.CardView>